{ 
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<APP_NAME>_ecsTaskExecutionRole",
  "family": "nodejs-app",
  "containerDefinitions": [
    {
      "name": "nodejs-app",
      "image": "your_ecr_repository_url:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ]
    }
  ]
  "requiresCompatibilities": [
    "EC2"
  ],
}

